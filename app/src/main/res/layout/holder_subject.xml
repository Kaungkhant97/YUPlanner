<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:orientation="horizontal"
    android:weightSum="7">

    <TextView
        android:id="@+id/txt_sbjname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium_3"
        android:layout_marginTop="32dp"
        android:layout_weight="1.5"
        android:textSize="24sp"
        tools:text="1st" />

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_weight="5"
        app:cardCornerRadius="2dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent"
            android:orientation="vertical"
            android:paddingBottom="64dp"
            android:paddingLeft="32dp"
            android:paddingTop="32dp">

            <TextView
                android:id="@+id/tv_module_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E - 3101"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/iv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_module_no"
                android:paddingTop="16dp"
                android:layout_alignLeft="@id/tv_module_no"
                android:src="@drawable/ic_label_black_24dp" />


            <TextView
                android:id="@+id/tv_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_module_no"
                android:layout_toRightOf="@id/iv_subject"
                android:paddingLeft="8dp"
                android:paddingTop="16dp"
                android:text="English"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_module_no"
                android:paddingTop="8dp"
                android:layout_below="@id/iv_subject"

                android:src="@drawable/ic_access_time_black_24dp" />

            <TextView
                android:id="@+id/tv_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_subject"
                android:layout_toRightOf="@id/iv_period"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:text="9:30 - 11:00"
                android:textColor="@android:color/white"
                android:textSize="20sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>